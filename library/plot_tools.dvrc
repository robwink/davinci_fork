		printf ("\n" )
		printf ("	Examples: \n")
		printf ("	   pplot(array)\n" )
		printf ("	     - plots an array, cycling through colors - just like xplot\n" )
		printf ("\n" )
		printf ("	   pplot(spectrum, 2, 'Hematite', tes=1)\n" )
