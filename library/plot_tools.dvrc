define multiplot(rows,columns,columnsfirst) {
	if(HasValue(rows)==0) rows=1
	if(HasValue(columns)==0) columns=1
	if(HasValue(columnsfirst)==0) columnsfirst=0

	if(rows!=1 || columns!=1) {
		layout="layout "+rows+","+columns
		if(columnsfirst==0) {
			cfs="rowsfirst"
		} else {
			cfs="columnsfirst"
		}
	} else {
		layout=""
		cfs=""
	}
	
  plot("set multiplot "+layout+" "+cfs+"")
}

