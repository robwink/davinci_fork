define rmlabel() {
  if ($ARGC == 0) {
    printf (" \n")
    printf (" Remove Labels \n")
    printf (" $1 = label number (0 for all) \n")
    printf("\n")
    return(0)
  }

  num=$1

  if (num == 0) {
    plot("set nolabel")
  }

  if (num != 0) {
    plot("set nolabel "+num+" ")
  }

  plot("replot")
}


define plim() {

  if ($ARGC == 0) {
    printf (" \n")
    printf (" Set plot limits. \n")
    printf (" $1 = xlow \n")
    printf (" $2 = xhigh \n")
    printf (" $3 = ylow \n")
    printf (" $4 = yhigh \n")
    printf (" \n")
    return(0)
  }

  if ($1 != $2) {
    if ($1 < $2) {
      plot("set xrange ["+$1+":"+$2+"] noreverse")
    } else {
      plot("set xrange ["+$1+":"+$2+"]")
    }
  }

  if ($1 == $2) {
    plot("set xrange [*:*] noreverse")
  }

  if ($3 != $4) {
    if ($3 < $4) {
      plot("set yrange ["+$3+":"+$4+"] noreverse")
    } else {
      plot("set yrange ["+$3+":"+$4+"]")
    }
  }

  if ($3 == $4) {
    plot("set yrange [*:*] noreverse")
  }

  plot("replot")
}



