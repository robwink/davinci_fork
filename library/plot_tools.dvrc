		single = 0
		for(ii = 1; ii <= ndata; ii+=1) {
			nx = dim(data[ii])[1]
			ny = dim(data[ii])[2]
			if(nx == 1 && ny ==1) {
				single = 1
			}
		}
		if(single == 0) {
			# data are an array - do nothing 
		} else {
