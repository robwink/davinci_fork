		# check to see if too many total vectors 
		nvec = 0
		for(ii = 1; ii <= ndata; ii+=1) {
			nx = dim(data[ii])[1]
			ny = dim(data[ii])[2]
			nvec = nvec + (nx * ny)
		}
		if(nvec >= nvec_gnu) {
			# make structure with appropriate number of colors and inform user
			ival = create(1000,1,1,format=int)
			ss = struct()
			for(j=1; j <= ndata; j+=1) {
				add_struct(ss, ival[j+1])
			}
			colors = ss
			ncolors = ndata
